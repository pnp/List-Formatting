{
  "schema": "https://developer.microsoft.com/json-schemas/sp/view-formatting.schema.json",
  "debugMode": false,
  "hideSelection": true,
  "hideColumnHeader": true,
  "rowFormatter": {
    "elmType": "div",
    "attributes": {
      "class": "ms-borderColor-neutralLight"
    },
    "style": {
      "flex-direction": "column",
      "align-items": "stretch",
      "box-sizing": "border-box",
      "border-width": "1px",
      "border-left-width": "1px",
      "border-style": "solid"
    },
    "children": [
      {
        "elmType": "div",
        "style": {
          "display": "flex",
          "flex-wrap": "wrap",
          "align-items": "center",
          "box-sizing": "border-box",
          "padding": "5px 5px"
        },
        
        "children": [
          {
            "elmType": "div",
            "style": {
              "flex": " 1 0 300px"
            },
            
            "children": [
              {
                "elmType": "div",
                "style": {},
                "children": [
                    {
                        "elmType": "img",
                        "attributes": {
                          "src": "[$TwitterProfilePic]",
                          "title": "[$TweetBy]",
                          "target": "_blank",
                              "href": "[$ProfileLink]"
                        },
                        "style": {
                          "border": "1px solid #808080",
                          "border-radius": "50%",
                          "left": "50%",
                          "width": "48px",
                          "height": "48px",
                          "margin-left": "15px",
                          "float":"left"
                        }
                      },
                  {
                    "elmType": "a",
                    "attributes": {
                        "class": "ms-fontWeight-semibold",
                            "target": "_blank",
                              "href": "[$ProfileLink]"
                          
                    },
                    "style": {
                      "line-height": "1.5em",
                      "color": "black",
                      "margin": "8px 0",
                      "font-size":"1.2em",
                      "font-weigth":"bold",
                      "padding-left":"18px",
                      "padding-right":"10px"
                    },
                    "txtContent": "[$TweetByFullName]"
                  },
                  {
                    "elmType": "span",
                    "attributes": {
                      "class": "ms-font-xl"
                    },
                    "style": {
                      "line-height": "1.5em",
                      "color": "gray",
                      "margin": "8px 0",
                      "font-size":"15px",
                      "font-family":"Helvetica"
                    },
                    "txtContent": "@"
                  },
                    {
                    "elmType": "span",
                    "attributes": {
                      "class": "ms-font-xl"
                    },
                    "style": {
                      "line-height": "1.5em",
                      "color": "gray",
                      "margin": "8px 0",
                      "font-size":"15px",
                      "font-family":"Helvetica"
                    },
                    "txtContent": "[$TweetBy]"
                  },
                  {
                    "elmType": "span",
                    "attributes": {
                      "class": "ms-font-xl"
                    },
                    "style": {
                      "line-height": "1.5em",
                      "color": "gray",
                      "margin": "8px 0",
                      "margin-left":"8px",
                      "font-size":"15px",
                      "font-family":"Helvetica"
                    },
                    "txtContent": "."
                  },
                  {
                    "elmType": "span",
                    "attributes": {
                      "class": "ms-font-xl"
                    },
                    "style": {
                      "line-height": "1.5em",
                      "color": "gray",
                      "margin": "8px 0",
                      "margin-left":"8px",
                      "font-size":"15px",
                      "font-family":"Helvetica"
                    },
                    "txtContent": "[$TweetFormattedDate]"
                  },
                  {
                    "elmType": "div",
                    "attributes": {
                      "class": "ms-font-m"
                    },
                    "style": {
                      "line-height": "1.5em",
                      "margin": "8px 0"
                    },
                    "children": [
                      {
                        "elmType": "div",
                        "style": {
                          "margin-left":"85px"
                        },
                        "children": [
                          {
                            "elmType": "div",
                            "attributes": {
                              "class": ""
                            },
                            "style": {
                      
                            },
                            "txtContent": "[$FullTweet]"
                          }
                        ]
                      }
                    ]
                  }
                ]
              }
            ]
          }
        ]
      },

      {
        "elmType": "div",
        "attributes": {
          "class": ""
        },
        "style": {
          "padding": "4px 88px",
          "line-height": "1.5em",
          "display": "flex",
          "justify-content": "space-between"
        },
        "children": [
          {
            "elmType": "span",
            "children": [
                {
                    "elmType": "span",
                    "style": {
                      "vertical-align": "bottom",
                      "margin": "0 9px 0 1px"
                    },
                    "attributes": {
                      "iconName": "BranchCompare"
                    }
                  },
              {
                "elmType": "span",
                "txtContent": "[$NumbRetweets]"
              },
              {
                "elmType": "a",
                "style": {
                  "vertical-align": "bottom",
                  "margin": "0 9px 0 20px"
                },
                "attributes": {
                  "iconName": "ShareiOS",
                  "target": "_blank",
                    "href": "[$LinkToTweet]"
                }
              }
            ]
          }
        ]
      }


    ]
  }
}