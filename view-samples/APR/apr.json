{
  "$schema": "https://developer.microsoft.com/json-schemas/sp/v2/tile-formatting.schema.json",
  "hideSelection": true,
  "hideListHeader": true,
  "rowFormatter": {
    "elmType": "div",
    "style": {
      "display": "block",
      "width": "500px"
    },
    "children": [
      {
        "elmType": "div",
        "style": {
          "height": "60px",
          "background-color": "#71afe5",
          "display": "flex",
          "align-items": "center"
        },
        "children": [
          {
            "elmType": "div",
            "txtContent": "Employee",
            "style": {
              "height": "=(60-4*2) + 'px'",
              "width": "=(80-4*2) + 'px'",
              "margin": "4px",
              "display": "flex",
              "align-items": "center",
              "justify-content": "center",
              "background-color": "yellow"
            }
          },
          {
            "elmType": "div",
            "txtContent": "='Employee: ' + [$Employee.title] + '\nManager: ' + [$Manager.title] ",
            "style": {
              "background-color": "#c7e0f4",
              "height": "=(60-4*2) + 'px'",
              "flex-grow": "1",
              "display": "flex",
              "align-items": "center",
              "justify-content": "left",
              "padding-left": "5px"
            }
          },
          {
            "elmType": "div",
            "txtContent": "Manager",
            "style": {
              "background-color": "yellow",
              "margin": "4px",
              "height": "=(60-4*2) + 'px'",
              "width": "=(80-4*2) + 'px'",
