{
  "$schema": "https://developer.microsoft.com/json-schemas/sp/v2/view-formatting.schema.json",
  "hideColumnHeader": false,
  "rowFormatter": {
    "elmType": "div",
    "style": {
      "display": "flex",
      "align-items": "center",
      "gap": "50px",
      "padding": "8px",
      "border-bottom": "1px solid #eee"
    },
    "children": [
      {
        "elmType": "span",
        "txtContent": "[$Title]",
        "style": {
          "font-weight": "600",
          "min-width": "150px"
        }
      },
      {
        "elmType": "img",
        "attributes": {
          "src": "='https://api.qrserver.com/v1/create-qr-code/?size=150x150&data=' + [$Title]",
          "alt": "='QR Code for ' + [$Title]"
        },
        "style": {
          "width": "100px",
          "height": "100px",
          "border": "1px solid #ddd",
          "padding": "4px",
          "background-color": "white"
        }
      }
    ]
  }
}