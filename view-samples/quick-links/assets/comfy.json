{
  "$schema": "https://developer.microsoft.com/json-schemas/sp/v2/tile-formatting.schema.json",
  "width": 72,
  "height": 98,
  "hideSelection": true,
  "fillHorizontally": false,
  "formatter": {
    "elmType": "div",
    "attributes": {
      "class": "sp-card-container"
    },
    "children": [
      {
        "elmType": "a",
        "attributes": {
          "class": "sp-card-defaultClickButton",
          "target": "_blank",
          "href": "[$Icon.desc]",
          "title": "[$Title]"
        }
      },
      {
        "elmType": "div",
        "attributes": {
          "class": "ms-bgColor-neutralLight sp-css-borderColor-neutralLight sp-card-borderHighlight sp-card-subContainer"
        },
        "children": [
          {
            "elmType": "div",
            "attributes": {
              "class": "sp-card-previewColumnContainer"
            },
            "children": [
              {
                "elmType": "div",
                "attributes": {
                  "class": "sp-card-imageContainer"
                },
                "children": [
                  {
                    "elmType": "div",
                    "attributes": {
                      "class": "sp-card-imagePreviewBackground"
                    },
                    "style": {
                      "max-height": "60px",
                      "background-color": "white",
                      "align-items": "center"
                    },
                    "children": [
                      {
                        "elmType": "img",
                        "attributes": {
                          "src": "=[$Icon]"
                        },
                        "style": {
                          "max-width": "100%",
                          "max-height": "100%",
                          "margin": "0",
                          "background-color": "white"
                        }
                      }
                    ]
                  }
                ]
              }
            ]
          },
          {
            "elmType": "div",
            "style": {
              "margin": "0",
              "justify-content": "center",
              "display": "flex",
              "height": "100%"
            },
            "children": [
              {
                "elmType": "p",
                "txtContent": "[$Title]",
                "style": {
                  "overflow-wrap": "break-word",
                  "word-break": "break-word",
                  "line-height": "1.2",
                  "font-size": "10px",
                  "display": "flex",
                  "text-align": "center",
                  "align-items": "center"
                }
              }
            ]
          }
        ]
      }
    ]
  }
}
