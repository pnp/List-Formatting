{
    "$schema": "https://developer.microsoft.com/json-schemas/sp/v2/column-formatting.schema.json",
    "height": "500",
    "width": "350",
    "hideSelection": true,
    "formatter": {
      "elmType": "div",
      "style": {
        "display": "flex",
        "flex-wrap": "wrap",
        "flex-grow": "1",
        "align-items": "stretch",
        "justify-content": "center",
        "margin-bottom": "15px",
        "padding": "5px"
      },
      "children": [
        {
          "elmType": "div",
          "style": {
            "position": "relative",
            "width": "95%",
            "height": "92.25%",
            "box-shadow": "rgba(0, 0, 0, 0.1) 0px 4px 12px",
            "overflow": "hidden",
            "border-radius": "2px"
          },
          "attributes": {
            "class": "ms-bgColor-white"
          },
          "children": [
            {
              "elmType": "div",
              "style": {
                "text-align": "left"
              },
              "children": [
                {
                  "elmType": "div",
                  "style": {
                    "height": "100px",
                    "display": "flex",
                    "align-items": "center",
                    "justify-content": "center",
                    "flex-direction": "column",
                    "background-color": "=if([$BackgroundColorCode],[$BackgroundColorCode], '')",
                    "color": "=if([$ColorCode],[$ColorCode],'')"
                  },
                  "attributes": {
                    "class": "ms-bgColor-themePrimary ms-fontColor-white"
                  },
                  "children": [
                    {
                      "elmType": "div",
                      "style": {
                        "font-size": "14px",
                        "font-weight": "600",
                        "text-transform": "uppercase",
                        "padding-top": "5px"
                      },
                      "txtContent": "[$Title]"
                    },
                    {
                      "elmType": "div",
                      "style": {
                        "display": "flex",
                        "align-items": "baseline",
                        "color": "inherit"
                      },
                      "children": [
                        {
                          "elmType": "div",
                          "style": {
                            "font-size": "20px",
                            "font-weight": "400",
                            "text-transform": "uppercase"
                          },
                          "txtContent": "[$AmountPrefix]"
                        },
                        {
                          "elmType": "div",
                          "style": {
                            "font-size": "42px",
                            "font-weight": "500",
                            "text-transform": "uppercase"
                          },
                          "txtContent": "[$Amount]"
                        },
                        {
                          "elmType": "div",
                          "style": {
                            "font-size": "14px",
                            "font-weight": "200",
                            "text-transform": "uppercase"
                          },
                          "txtContent": "[$AmountSuffix]"
                        }
                      ]
                    }
                  ]
                },
                {
                  "forEach": "lookupIterator in split([$Features],';')",
                  "elmType": "div",
                  "style": {
                    "display": "flex",
                    "align-items": "center",
                    "justify-content": "space-between",
                    "border-bottom": "1px solid #f7f7f7",
                    "padding": "10px",
                    "position": "relative"
                  },
                  "children": [
                    {
                      "elmType": "span",
                      "attributes": {
                        "iconName": "Completed",
                        "class": "ms-font-xl ms-fontColor-neutralTertiary"
                      },
                      "style": {
                        "padding-left": "15px",
                        "font-size": "22px",
                        "flex": "0 1 auto"
                      }
                    },
                    {
                      "elmType": "div",
                      "style": {
                        "position": "absolute",
                        "left": "50%",
                        "transform": "translate(-50%)",
                        "font-size": "16px",
                        "font-weight": "400"
                      },
                      "txtContent": "[$lookupIterator]"
                    }
                  ]
                },
                {
                  "elmType": "a",
                  "attributes": {
                    "class": "ms-bgColor-themePrimary ms-fontColor-white",
                    "href": "[$Link]",
                    "target": "_blank"
                  },
                  "style": {
                    "position": "absolute",
                    "bottom": "0",
                    "display": "flex",
                    "width": "100%",
                    "height": "50px",
                    "align-items": "center",
                    "justify-content": "center",
                    "font-size": "16px",
                    "font-weight": "600",
                    "cursor": "pointer",
                    "text-decoration": "none",
                    "background-color": "=if([$BackgroundColorCode],[$BackgroundColorCode], '')",
                    "color": "=if([$ColorCode],[$ColorCode],'')"
                  },
                  "txtContent": "Select Package"
                }
              ]
            }
          ]
        }
      ]
    }
  }