{
    "$schema": "https://developer.microsoft.com/json-schemas/sp/view-formatting.schema.json",
    "commandBarProps": {
        "commands": [
            {
                "key": "new",
                "hide": true
            }
        ]
    },
    "debugMode": false,
    "hideSelection": true,
    "hideColumnHeader": true,
    "rowFormatter": {
        "elmType": "div",
        "style": {
            "list-style-type": "none",
            "padding": "15px",
            "width": "600px",
            "border": "1px solid #ddd",
            "border-radius": "8px",
            "box-shadow": "0 4px 8px rgba(0, 0, 0, 0.1)",
            "margin-bottom": "15px",
            "overflow": "hidden",
            "position": "relative",
            "display": "flex",
            "flex-direction": "column"
        },
        "children": [
            {
                "elmType": "div",
                "style": {
                    "display": "flex",
                    "flex-direction": "column",
                    "flex-wrap": "wrap",
                    "gap": "15px"
                },
                "children": [
                    {
                        "elmType": "div",
                        "style": {
                            "display": "flex",
                            "flex-direction": "row",
                            "gap": "15px",
                            "align-items": "center"
                        },
                        "children": [
                            {
                                "elmType": "div",
                                "style": {
                                    "flex": "0 0 140px",
                                    "position": "relative"
                                },
                                "children": [
                                    {
                                        "elmType": "img",
                                        "attributes": {
                                            "src": "[$MovieImage]",
                                            "alt": "Movie Poster"
                                        },
                                        "style": {
                                            "width": "100%",
                                            "height": "auto",
                                            "border-radius": "8px"
                                        }
                                    }
                                ]
                            },
                            {
                                "elmType": "div",
                                "style": {
                                    "flex": "1",
                                    "display": "flex",
                                    "flex-direction": "column",
                                    "gap": "10px"
                                },
                                "children": [
                                    {
                                        "elmType": "div",
                                        "style": {
                                            "display": "flex",
                                            "flex-direction": "column",
                                            "flex-wrap": "wrap",
                                            "gap": "10px",
                                            "align-items": "center"
                                        },
                                        "children": [
                                            {
                                                "elmType": "div",
                                                "style": {
                                                    "background-color": "#54A72A",
                                                    "color": "white",
                                                    "padding": "2px 6px",
                                                    "border-radius": "4px",
                                                    "font-size": "16px"
                                                },
                                                "txtContent": "[$Title]"
                                            },
                                            {
                                                "elmType": "div",
                                                "style": {
                                                    "display": "flex",
                                                    "flex-direction": "row",
                                                    "flex-wrap": "wrap",
                                                    "gap": "5px",
                                                    "margin-top": "10px"
                                                },
                                                "children": [
                                                    {
                                                        "elmType": "span",
                                                        "style": {
                                                            "align-items": "center",
                                                            "color": "rgba(0, 0, 0, 0.54)",
                                                            "padding": "2px 6px",
                                                            "font-size": "16px"
                                                        },
                                                        "txtContent": "[$Year]"
                                                    },
                                                    {
                                                        "elmType": "span",
                                                        "style": {
                                                            "align-items": "center",
                                                            "color": "rgba(0, 0, 0, 0.54)",
                                                            "padding": "2px 6px",
                                                            "font-size": "16px"
                                                        },
                                                        "txtContent": "[$Duration]"
                                                    },
                                                    {
                                                        "elmType": "span",
                                                        "style": {
                                                            "align-items": "center",
                                                            "color": "rgba(0, 0, 0, 0.54)",
                                                            "padding": "2px 6px",
                                                            "font-size": "16px"
                                                        },
                                                        "txtContent": "[$Rating]"
                                                    }
                                                ]
                                            },
                                            {
                                                "elmType": "div",
                                                "style": {
                                                    "display": "flex",
                                                    "flex-direction": "row",
                                                    "flex-wrap": "wrap",
                                                    "gap": "5px",
                                                    "margin-top": "10px"
                                                },
                                                "children": [
                                                    {
                                                        "elmType": "div",
                                                        "style": {
                                                            "font-size": "20px",
                                                            "color": "#FFCC99",
                                                            "margin-left": "5px"
                                                        },
                                                        "attributes": {
                                                            "iconName": "FavoriteStarFill"
                                                        }
                                                    },
                                                    {
                                                        "elmType": "span",
                                                        "style": {
                                                            "align-items": "center",
                                                            "color": "rgba(0, 0, 0, 0.54)",
                                                            "font-size": "16px","margin-left": "5px"
                                                        },
                                                        "txtContent": "[$VoteCount]"
                                                    },
                                                    {
                                                        "elmType": "span",
                                                        "style": {
                                                            "background-color": "#54A72A","margin-left": "5px",
                                                            "color": "white",
                                                            "padding": "2px 6px",
                                                            "border-radius": "4px"
                                                        },
                                                        "txtContent": "82"
                                                    },
                                                    {
                                                        "elmType": "span","style": {
                                                            "align-items": "center",
                                                            "color": "rgba(0, 0, 0, 0.54)",
                                                            "font-size": "16px",
                                                            "margin-left": "5px"
                                                        },
                                                        "txtContent": "Metascore"
                                                    }
                                                ]
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "elmType": "div",
                "style": {
                    "display": "flex",
                    "flex-direction": "row",
                    "gap": "10px"
                },
                "children": [
                    {
                        "elmType": "div",
                        "style": {
                            "display": "flex",
                            "flex-wrap": "wrap",
                            "gap": "5px",
                            "margin-top": "10px"
                        },
                        "children": [
                            {
                                "elmType": "span",
                                "style": {
                                    "font-size": "16px","margin-right": "5px",
                                    "font-weight": "bold"
                                },
                                "txtContent": "Director:"
                            },
                            {
                                "elmType": "a",
                                "attributes": {
                                    "href": "#"
                                },
                                "style": {
                                    "font-size": "16px","text-decoration": "none",
                                    "color": "#333",
                                    "margin-right": "5px",
                                    "font-style": "italic"
                                },
                                "txtContent": "[$Director]"
                            },
                            {
                                "elmType": "span",
                                "style": {
                                    "font-size": "16px","margin-right": "5px",
                                    "font-weight": "bold"
                                },
                                "txtContent": "Stars:"
                            },
                            {
                                "elmType": "a",
                                "attributes": {
                                    "href": "#"
                                },
                                "style": {
                                    "font-size": "16px","text-decoration": "none",
                                    "color": "#333",
                                    "margin-right": "5px",
                                    "font-style": "italic"
                                },
                                "txtContent": "[$Actor1]"
                            },
                            {
                                "elmType": "a",
                                "attributes": {
                                    "href": "#"
                                },
                                "style": {
                                    "font-size": "16px","text-decoration": "none",
                                    "color": "#333",
                                    "margin-right": "5px",
                                    "font-style": "italic"
                                },
                                "txtContent": "[$Actor2]"
                            },
                            {
                                "elmType": "a",
                                "attributes": {
                                    "href": "#"
                                },
                                "style": {
                                    "font-size": "16px","text-decoration": "none",
                                    "color": "#333",
                                    "margin-right": "5px",
                                    "font-style": "italic"
                                },
                                "txtContent": "[$Actor3]"
                            }
                        ]
                    }
                ]
            }
        ]
    }
}