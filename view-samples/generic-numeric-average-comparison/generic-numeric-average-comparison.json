                        },
                        "children": [
                          {
                            "elmType": "span",
                            "attributes": {
                              "class": "vf-StudentGrades-NumericGradeLabel"
                            },
                            "txtContent": "Q1-Q2 Average Grade: "
                          },
                          {
                            "elmType": "span",
                            "attributes": {
                              "class": "vf-StudentGrades-NumericGradeValue"
                            },
                            "style": {
                              "font-weight": "bold"
                            },
                            "txtContent": "=toString(([$Q1NumericGrade] + [$Q2NumericGrade])/2) + '%'"
                          }
