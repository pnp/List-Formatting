{
  "$schema": "https://developer.microsoft.com/json-schemas/sp/v2/tile-formatting.schema.json",
  "height": 200,
  "width": 350,
  "hideSelection": true,
  "formatter": {
    "elmType": "div",
    "style": {
      "padding": "10px"
    },
    "children": [
      {
        "elmType": "div",
        "style": {
          "width": "100%",
          "border-radius": "8px",
          "overflow": "hidden",
          "box-shadow": "0 2px 8px rgba(0,0,0,0.1)"
        },
        "children": [
          {
            "elmType": "img",
            "attributes": {
              "src": "=[$ImageUrl]",
              "alt": "Image"
            },
            "style": {
              "width": "100%",
              "height": "160px",
              "border-radius": "8px 8px 0 0",
              "object-fit": "cover"
            }
          },
          {
            "elmType": "div",
            "style": {
              "padding": "15px",
              "margin-top": "-80px",
              "border-radius": "0 0 8px 8px"
            },
            "children": [
              {
                "elmType": "div",
                "style": {
                  "display": "flex",
                  "justify-content": "center",
                  "gap": "10px"
                },
                "children": [
                  {
                    "elmType": "a",
                    "attributes": {
                      "href": "=[$Button1Url]",
                      "target": "_blank"
                    },
                    "style": {
                      "padding": "8px 16px",
                      "background-color": "rgba(0, 120, 212, 0.9)",
                      "color": "white",
                      "border-radius": "20px",
                      "text-decoration": "none",
                      "font-size": "12px",
                      "font-weight": "600",
                      "text-align": "center",
                      "min-width": "60px"
                    },
                    "txtContent": "=if([$Button1Label] == '', 'Action', [$Button1Label])"
                  },
                  {
                    "elmType": "a",
                    "attributes": {
                      "href": "=[$Button2Url]",
                      "target": "_blank"
                    },
                    "style": {
                      "padding": "8px 16px",
                      "background-color": "rgba(0, 120, 212, 0.9)",
                      "color": "white",
                      "border-radius": "20px",
                      "text-decoration": "none",
                      "font-size": "12px",
                      "font-weight": "600",
                      "text-align": "center",
                      "min-width": "60px"
                    },
                    "txtContent": "=if([$Button2Label] == '', 'View', [$Button2Label])"
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  }
}