{
  "$schema": "https://developer.microsoft.com/json-schemas/sp/v2/column-formatting.schema.json",
  "elmType": "div",
  "style": {
    "display": "flex",
    "align-items": "center",
    "gap": "12px",
    "padding": "6px 8px",
    "border-radius": "8px"
  },
  "attributes": {
    "class": "=if(@me == @currentField.email, 'sp-css-backgroundColor-themeLighterAlt', 'sp-css-backgroundColor-neutralLighterAlt')"
  },
  "children": [
    {
      "elmType": "div",
      "style": {
        "position": "relative",
        "display": "flex"
      },
      "children": [
        {
          "elmType": "div",
          "style": {
            "display": "inline-flex",
            "align-items": "center",
            "justify-content": "center",
            "border-radius": "50%",
            "width": "44px",
            "height": "44px",
            "color": "white",
            "font-weight": "600",
            "font-size": "16px",
            "text-transform": "uppercase",
            "box-shadow": "0 2px 8px rgba(0,0,0,0.12)",
            "cursor": "pointer",
            "background-color": "=if(@currentField.email , '#e81123', '#1078D4')"

          },
          "txtContent": "=if(@currentField.title, substring(@currentField.title, 0, 1), '?')",
          "customRowAction": {
            "action": "defaultClick"
          }
        },
        {
          "elmType": "div",
          "style": {
            "position": "absolute",
            "bottom": "-2px",
            "right": "-2px",
            "width": "14px",
            "height": "14px",
            "border-radius": "50%",
            "border": "2px solid white",
            "background-color": "#10b981",
            "display": "=if(@currentField.email && length(@currentField.email) > 0, 'block', 'none')"
          }
        }
      ]
    },
    {
      "elmType": "div",
      "style": {
        "display": "flex",
        "flex-direction": "column",
        "flex": "1",
        "min-width": "0"
      },
      "children": [
        {
          "elmType": "div",
          "txtContent": "=@currentField.title",
          "style": {
            "font-size": "15px",
            "font-weight": "500",
            "color": "#1f2937",
            "line-height": "1.4",
            "margin-bottom": "2px",
            "white-space": "nowrap",
            "overflow": "hidden",
            "text-overflow": "ellipsis",
            "cursor": "pointer"
          },
          "customRowAction": {
            "action": "defaultClick"
          }
        },
        {
          "elmType": "div",
          "txtContent": "=if(@currentField.email, @currentField.email, 'No email available')",
          "style": {
            "font-size": "13px",
            "color": "#6b7280",
            "line-height": "1.3",
            "white-space": "nowrap",
            "overflow": "hidden",
            "text-overflow": "ellipsis",
            "opacity": "=if(@currentField.email, '1', '0.6')"
          }
        }
      ]
    },
    {
      "elmType": "div",
      "style": {
        "display": "=if(@currentField.email && length(@currentField.email) > 0, 'flex', 'none')",
        "align-items": "center",
        "gap": "6px",
        "margin-left": "auto"
      },
      "children": [
        {
          "elmType": "a",
          "attributes": {
            "href": "='mailto:' + @currentField.email",
            "title": "Send Email",
            "target": "_self"
          },
          "style": {
            "display": "flex",
            "align-items": "center",
            "justify-content": "center",
            "width": "32px",
            "height": "32px",
            "border-radius": "6px",
            "background-color": "#f3f4f6",
            "border": "1px solid #e5e7eb",
            "transition": "all 0.2s ease",
            "cursor": "pointer",
            "text-decoration": "none",
            "color": "#0078d4"
          },
          "children": [
            {
              "elmType": "span",
              "txtContent": "âœ‰",
              "style": {
                "font-size": "14px"
              }
            }
          ]
        },
        {
          "elmType": "a",
          "attributes": {
            "href": "='https://teams.microsoft.com/l/chat/0/0?users=' + @currentField.email",
            "title": "Chat in Teams",
            "target": "_blank"
          },
          "style": {
            "display": "flex",
            "align-items": "center",
            "justify-content": "center",
            "width": "32px",
            "height": "32px",
            "border-radius": "6px",
            "background-color": "#f3f4f6",
            "border": "1px solid #e5e7eb",
            "transition": "all 0.2s ease",
            "cursor": "pointer",
            "text-decoration": "none",
            "color": "#6264a7"
          },
          "children": [
            {
              "elmType": "span",
              "txtContent": "ðŸ’¬",
              "style": {
                "font-size": "14px"
              }
            }
          ]
        }
      ]
    }
  ],
  "customCardProps": {
    "openOnEvent": "hover",
    "directionalHint": "rightCenter",
    "isBeakVisible": true,
