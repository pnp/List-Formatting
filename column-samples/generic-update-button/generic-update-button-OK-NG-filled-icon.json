{
  "$schema": "https://developer.microsoft.com/json-schemas/sp/v2/column-formatting.schema.json",
  "elmType": "div",
  "children": [
    {
      "elmType": "div",
      "style": {
        "display": "=if([$FieldName] == 'Value to hide the button' , 'none' , 'flex')",
        "flex-direction": "row"
      },
      "children": [
        {
          "elmType": "div",
          "style": {
            "width": "30px",
            "height": "30px",
            "border-radius": "50%",
            "cursor": "pointer",
            "display": "flex",
            "align-items": "center",
            "justify-content": "space-evenly",
            "margin": "5px"
          },
          "attributes": {
            "class": "ms-bgColor-tealLight ms-bgColor-teal--hover ms-fontColor-white ms-fontSize-16 ms-fontWeight-bold"
          },
          "customRowAction": {
            "action": "setValue",
            "actionInput": {
              "Status": "OK",
              "Date": "@now",
              "User": "@me"
            }
          },
          "children": [
            {
              "elmType": "div",
              "attributes": {
                "iconName": "AcceptMedium"
              }
            }
          ]
        },
        {
          "elmType": "div",
          "style": {
            "width": "30px",
            "height": "30px",
            "border-radius": "50%",
            "cursor": "pointer",
            "display": "flex",
            "align-items": "center",
            "justify-content": "space-evenly",
            "margin": "5px"
          },
          "attributes": {
            "class": "ms-bgColor-red ms-bgColor-redDark--hover ms-fontColor-white ms-fontSize-16 ms-fontWeight-bold"
          },
          "customRowAction": {
            "action": "setValue",
            "actionInput": {
              "Status": "NG",
              "Date": "@now",
              "User": "@me"
            }
          },
          "children": [
            {
              "elmType": "div",
              "attributes": {
                "iconName": "ChromeClose"
              }
            }
          ]
        }
      ]
    }
  ]
}