{
  "$schema": "https://developer.microsoft.com/json-schemas/sp/v2/column-formatting.schema.json",
  "elmType": "a",
  "attributes": {
    "title": "Export to PDF",
    "iconName": "pdf",
    "target": "_blank",
    "href": "=@currentWeb + '/_api/v2.0/drives/{YOUR-DOC-LIB-DRIVE-ID-b!}/root:/' + substring([$FileRef],indexOf(replace(replace(replace(replace([$FileRef],'/','x'),'/','x'),'/','x'),'/','|'),'|')+1,400) + ':/content?format=pdf'"
  },
  "style": {
    "font-size": "25px",
    "color": "#d3502d",
    "text-decoration": "none",
    "display": "=if([$File_x0020_Type] == 'docx' || [$File_x0020_Type] == 'pptx' || [$File_x0020_Type] == 'xlsx','','none')"
  }
}
