{
  "$schema": "https://developer.microsoft.com/json-schemas/sp/v2/column-formatting.schema.json",
  "elmType": "div",
  "style": {
    "display": "=if(@currentField,'flex','none')",
    "margin": "5px 0"
  },
  "children": [
    {
      "elmType": "div",
      "attributes": {
        "class": "ms-bgColor-themePrimary"
      },
      "style": {
        "display": "flex",
        "flex-direction": "column",
        "width": "44px",
        "border-radius": "8px",
        "background-color": "=if(toDateString(@currentField)==toDateString(@now),'#c43b33','')",
        "font-weight": "bold"
      },
      "children": [
        {
          "elmType": "div",
          "txtContent": "=substring('JANFEBMARAPRMAYJUNJULAUGSEPOCTNOVDEC',getMonth(@currentField)*3,getMonth(@currentField)*3+3)",
          "style": {
            "display": "flex",
            "justify-content": "center",
            "letter-spacing": "1px",
            "padding": "2px 0 2px 0",
            "color": "white"
          }
        },
        {
          "elmType": "div",
          "txtContent": "=getDate(@currentField)",
          "style": {
            "display": "flex",
            "background-color": "white",
            "margin": "0 1px 1px 1px",
            "border-radius": "0 0 7px 7px",
            "justify-content": "center",
            "font-size": "22px",
            "padding-bottom": "3px"
          }
        }
      ]
    }
  ]
}